# Application
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# Frontend origins (comma separated)
CORS_ALLOWLIST=http://localhost:5173,http://localhost:3000

# Database (required)
DATABASE_URL=postgresql://routing_app:change_me@localhost:5432/routing?schema=public

# Core services
PITEAS_API_BASE_URL=https://sdk.piteas.io
RPC_URL=https://rpc.pulsechain.com

# Proxy configuration (optional)
USE_PROXY=false
PROXY_LIST=
PROXY_USERNAME=
PROXY_PASSWORD=

# Rate limiting (optional overrides)
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW_MS=60000
RL_POINTS=200
RL_DURATION=60
QUOTE_RL_POINTS=10
QUOTE_RL_DURATION=5

# Onramp providers data
ONRAMPS_JSON_PATH=./src/data/onramps_providers.json

# Onramp integrations (optional)
MOONPAY_PUBLISHABLE_KEY=
MOONPAY_SECRET_KEY=
TRANSAK_KEY=
TRANSAK_REFERRER_DOMAIN=localhost
RAMP_HOST_API_KEY=
RAMP_HOST_APP_NAME=
RAMP_FINAL_URL=https://localhost:5173/bridge

# Legacy integrations (optional)
CHANGENOW_API_KEY=
