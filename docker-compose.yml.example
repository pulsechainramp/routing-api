services:
  db:
    image: postgres:16-alpine
    environment:
      POSTGRES_USER: routing_app
      POSTGRES_PASSWORD: change_me
      POSTGRES_DB: routing
    ports:
      - "5432:5432"
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U postgres"]
      interval: 5s
      timeout: 5s
      retries: 10
    volumes:
      - pgdata:/var/lib/postgresql/data

  api:
    build:
      context: .
      dockerfile: Dockerfile
    env_file: ./.env
    depends_on:
      db:
        condition: service_healthy
    ports:
      - "3000:3000"
    command: sh -c "npm run db:generate && npm run db:migrate && npm run start"

volumes:
  pgdata:
